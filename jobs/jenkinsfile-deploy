pipeline {

    agent any
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        disableConcurrentBuilds()
        timestamps()
        ansiColor('xtrem')
    }

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub_pat')
        APP_DIR="app-image"
    }
    
    stages {
        stage('list cwd') {
            steps {
                script {
                    sh "ls"
                    sh "pwd"
                }
            }
        }
        stage('copy artifacts') {
            steps {
                copyArtifacts filter: '*/dist/*', fingerprintArtifacts: true, projectName: 'build_app', selector: lastWithArtifacts()
            }
        }
        stage('unarchive artifacts') {
            steps {
                script {
                    sh "mv */dist/app ${APP_DIR}/app"
                }
            }
        }
        stage('build app image') {
            steps {
                dir(APP_DIR) {
                    script {
                        sh "docker build -t roomich13/chat_bot:latest ."
                    }
                }
            }
        }
        stage('login to docker registry') {
            steps {
                sh "echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin"
            }
        }
        stage('push image to registry') {
            steps {
                sh "docker push roomich13/chat_bot:latest"
            }
        }
        stage('run app on the remote server') {
            steps {
                sh "ssh vagrant@app.local docker run -d roomich13/chat_bot:latest"
            }
        }
    }
    post { 
        always {
            sh 'docker logout'
        }
    }
}