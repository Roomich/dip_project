pipeline {

    agent any
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        disableConcurrentBuilds()
        timestamps()
        ansiColor('xtrem')
    }
    
    stages {
        stage('list cwd') {
            steps {
                script {
                    sh "ls"
                    sh "pwd"
                }
            }
        }
        stage('copy artifacts') {
            steps {
                copyArtifacts filter: '*/dist/*', fingerprintArtifacts: true, projectName: 'build_app', selector: lastWithArtifacts()
            }
        }
        stage('unarchive artifacts') {
            steps {
                script {
                    sh "mv */*/app application/app"
                }
            }
        }
        stage('copy files to remote ssh server') {
            environment {
                APP_DIR="application/"
            }
            steps {
                dir(APP_DIR) {
                    script {
                        sh "docker build -t roomich13/chat_bot:latest ."
                        sh "docker push roomich13/chat_bot:latest"
                    }
                }
            }
        }
    }
}